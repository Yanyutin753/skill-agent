# FastAPI Agent Configuration Example

# ============================================
# 主模型配置（文本任务）
# ============================================
LLM_API_KEY=your-main-api-key-here
LLM_API_BASE=
LLM_MODEL=dashscope/qwen3-max

# ============================================
# 视觉模型配置（图像任务）
# ============================================
# 如果视觉模型与主模型使用相同提供商，只需设置 VISION_MODEL
VISION_MODEL=dashscope/qwen-vl-max

# 如果视觉模型使用不同提供商，需要设置独立的 API key 和 base URL
# 示例 1：主模型用 OpenAI，视觉模型用 DashScope
# LLM_API_KEY=sk-xxxxx
# LLM_MODEL=openai/gpt-4o
# VISION_API_KEY=sk-dashscope-xxxxx
# VISION_API_BASE=https://dashscope.aliyuncs.com/compatible-mode/v1
# VISION_MODEL=dashscope/qwen-vl-max

# 示例 2：主模型用 DashScope，视觉模型用 OpenAI
# LLM_API_KEY=sk-dashscope-xxxxx
# LLM_API_BASE=https://dashscope.aliyuncs.com/compatible-mode/v1
# LLM_MODEL=dashscope/qwen3-max
# VISION_API_KEY=sk-openai-xxxxx
# VISION_API_BASE=
# VISION_MODEL=openai/gpt-4o

VISION_API_KEY=
VISION_API_BASE=

# ============================================
# Agent 配置
# ============================================
AGENT_MAX_STEPS=150
AGENT_WORKSPACE_DIR=./workspace

# ============================================
# 功能开关
# ============================================
ENABLE_SKILLS=true
ENABLE_MCP=true
ENABLE_RAG=true
ENABLE_SESSION=true
ENABLE_SPAWN_AGENT=true
ENABLE_DESKTOP_CONTROL=true

# ============================================
# Session 配置
# ============================================
SESSION_BACKEND=file
SESSION_STORAGE_PATH=~/.fastapi-agent/sessions.json
SESSION_MAX_AGE_DAYS=7

# ============================================
# RAG 配置
# ============================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=
POSTGRES_DB=knowledge_base

DASHSCOPE_API_KEY=
EMBEDDING_MODEL=text-embedding-v4
CHUNK_SIZE=500
RAG_TOP_K=5

# ============================================
# 调试
# ============================================
DEBUG=false
ENABLE_DEBUG_LOGGING=false
